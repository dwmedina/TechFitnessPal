                            <th>Delete</th>
                        </tr>

                    </thead>
                    <tbody>

                        @foreach (var userFood in userFoods)

                        {
                            @if (userFood.MealId == 5 && user.Id == userFood.UserId)
                            {
                                <tr>
                                    <td>@userFood.FoodName</td>
                                    <td>@userFood.NumberOfServings</td>
                                    <td>@(userFood.CaloriesPerServing * userFood.NumberOfServings)</td>
                                    <td>
