                                            <button class="btn" value="submit" type="submit">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>
            </div>
            @*Show Snack Table*@
            <div>
                <h2>Snack</h2>
                <table class="table">
                    <thead>
