@model User
@{
    ViewData["Title"] = "EditProfile";
}

<h2>EditProfile</h2>
<form asp-controller="Account" asp-action="SaveChanges" method="post">

    <text>Username: </text>
    <text>@Model.Username</text>

    <br />

    <text>Email: </text>
    <text>@Model.Email</text>

    <br />

    <label asp-for="FirstName">First Name: </label>
    <input type="text" asp-for="FirstName" placeholder="@Model.FirstName" />

    <br />

    <label asp-for="LastName">Last Name: </label>
    <input type="text" asp-for="LastName" placeholder="@Model.LastName" />

    <br />

    <text>Date of Birth: </text>
    <text>@Model.BirthDate.ToShortDateString()</text>

    <br />

    <text>Age: </text>
    <text>@Model.Age</text>

    <br />

    <label asp-for="Height">Height (inches): </label>
    <input type="number" asp-for="Height" placeholder="@Model.Height" />

    <br />

    <label asp-for="CurrentWeight">Current Weight (lbs.): </label>
    <input type="number" asp-for="CurrentWeight" placeholder="@Model.CurrentWeight" />

    <br />

    <label asp-for="DesiredWeight">Desired Weight (lbs.): </label>
    <input type="number" asp-for="DesiredWeight" placeholder="@Model.DesiredWeight" />

    <br />

    <label>Recommended Daily Calories:</label>
    <text>@Model.RecommendedDailyCaloricIntake</text>

    <br />

    <button type="submit" value="submit" class="btn">
        Save Changes
    </button>
</form>
